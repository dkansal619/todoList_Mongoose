<!-- using ejs layout for header  -->
<%- include("header"); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>

    </div>

    <div class="box">
        
        <%  newListItems.forEach((items)=>{ %>
        <form action="/delete" method="post">
            <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= items._id %>" onChange="this.form.submit()">
                    <p>
                        <%= items.name %>
                    </p>
    
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
            <% }) %>


            <form class="item" action="/" method="post">
                <input placeholder="New Item" type="text" name="newItem" autocomplete="off" required>
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>

    <!-- using ejs layout for footer -->
    <%- include("footer"); -%>
    
        

    



